.popup
	background-color MainColorDark
	position absolute
	width 100%
	display table
	visibility hidden
	opacity 0
	z-index 99
	background-color alpha(MainColorDark, 0.2)
	height calc(100% - 40px)

	&.active
		visibility visible
		opacity 1

		& .popup-content
			transform scale(1)

.popup-helper
	display table-cell
	vertical-align middle

.popup-content
	margin 0 auto
	width 600px
	display block
	transform scale(0.5)
	padding 20px
	background-color lighten(MainColor, 100%)

	& .link
		display inline-block
		margin-right 20px
		cursor pointer
		padding-bottom 1px
		border-bottom 1px solid

	& h4
		border-bottom 1px solid #f5f5f5
		padding-bottom 10px
		color MainColorDark

	& h4:first-child
		margin-top 0

	& p
		color MainColorDark

		.text
			width 300px
			height 30px
			line-height 30px
			padding-left 15px
			outline none
			background #f5f5f5
			color darken(#f5f5f5, 70%)
			border 0px
			border-radius 2px

			&::-webkit-input-placeholder
				color darken(#f5f5f5, 70%)

	& p span
		width 40%
		display inline-block

	& label
		display inline-block
		cursor pointer
		position relative
		padding-left 25px
		margin-right 15px

		&:before
			content ""
			width 12px
			height 12px
			position absolute
			margin-top 1px
			left 0
			border-radius 50%
			background-color lighten(MainColor, 100%)
			box-shadow inset 0px 0px 0px 1px lighten(MainColorDark, 80%)

	& input[type=radio]
		display none

		&:checked + label:before
			box-shadow inset 0px 0px 0px 3px lighten(MainColorDark, 80%)
