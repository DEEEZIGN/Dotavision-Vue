body
	margin 0

.content
	height calc(100vh - 40px)
	background-color lighten(MainColor, 100%)
	width 100%

	& > div
		visibility hidden
		background-color lighten(MainColor, 100%)
		opacity 0
		position absolute
		width 100%
		height calc(100vh - 40px)

		&.active
			visibility visible
			opacity 1
