.heroesChoice
	position absolute
	left 0
	height 100%
	width 300px
	background-color lighten(MainColorDark, 90%)
	padding 20px

	& .heroesList
		height calc(100% - 100px)
		width 100%
		overflow-y scroll
		border 1px solid lighten(MainColorDark, 80%)
		border-right 0

		& .hero
			height 40px
			padding 10px 10px
			cursor pointer
			display none
			border-bottom 1px solid lighten(MainColorDark, 80%)

			&.inDraft
				display none !important

			&.active
				display block


			&:last-child
				border-bottom 0

			&:hover
			&.selected
				background-color lighten(MainColorDark, 80%)

			& img
				height 100%
				opacity 0.8
				vertical-align middle
				margin-right 10px

			& .heroName
				display inline-block
				color MainColorDark

		&::-webkit-scrollbar
			transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1)
			width: 5px

		&:hover::-webkit-scrollbar
			width 15px

		&::-webkit-scrollbar-track
			background-color lighten(MainColorDark, 80%)

		&::-webkit-scrollbar-thumb
			background-color lighten(MainColorDark, 70%)

	& .heroInput
		width 100%
		outline none
		height 40px
		line-height 40px
		border none
		margin-top 10px
		padding 0px 15px
		color MainColorDark
		background lighten(MainColorDark, 80%)

		&::-webkit-input-placeholder
			color lighten(MainColorDark, 20%)

	& .heroAdd
		height 40px
		float left
		line-height 40px
		color lighten(MainColorDark, 90%)
		background-color MainColorDark
		margin-top 10px
		width 36%
		text-align center
		border-left 1px solid lighten(MainColorDark, 10%)
		border-right 1px solid lighten(MainColorDark, 10%)

		&.heroAddButton
			width 32%
			border 0px
			cursor pointer

			&:hover
				background-color lighten(MainColorDark, 10%)



.draftAnalisys
	position absolute
	right 0
	height 100%
	width calc(100vw - 300px)
	padding 20px
	transition none

	& .team
		width 50%
		float left
		padding-left 20px

		& .name
			width 100%
			text-align right
			color MainColorDark

		&:first-child
			padding-left 0
			padding-right 20px

			& .name:first-child
				text-align left

			& .draft img
				float left
				margin-left 0
				margin-right 1px

		& .draft
			margin-top 10px

			& img
				float right
				width calc(20% - 1px)
				background-color lighten(MainColorDark, 90%)
				max-width 44px
				cursor pointer
				opacity 0.8
				margin-left 1px

				&:hover
				&.active
					opacity 1

	& .draftHeroInfo
		margin-top 10px

		& img
			margin-top 15px
			height 26px

		& .name
			display inline-block
			font-size 15px
			margin-left 10px
			line-height 15px
			color MainColorDark

			& span
				font-size 13px
				margin-right 5px
				color MainColor
		
		& .counter
			padding 15px
			border 1px solid lighten(MainColorDark, 90%)
			margin-top 15px
			width calc(50% - 10px)
			float left

			&:last-child
				float right

			& h4
				margin 0
				color MainColorDark
				margin-bottom 10px

			& .hero
				display inline-block
				width 100%
				margin-top 9px
				padding-bottom 8px
				color MainColor
				border-bottom 1px solid lighten(MainColorDark, 90%)

				&:last-child
					border-bottom 0
					padding-bottom 0

				& img
					margin 0px
					height 19px
					opacity 0.8
					vertical-align middle

				& span
					margin-left 5px
	& .draftAnalisysTotal
		position absolute
		bottom 0px
		width 100%
		left 0px
		padding: 20px
		border-top 1px solid lighten(MainColorDark, 90%)
		height 70px
		
		& .total
			width 50%
			height 8px
			float left
			margin-top 7px
			max-width 80%
			min-width 20%
			background-color lighten(MainColorDark, 90%)

			&.radiant
				border-right 3px solid lighten(MainColorDark, 100%)

			&.dire
				float right
				text-align right

			&.win
				background-color lighten(MainColorDark, 80%)
		
		& .totalTeam 
			width 50%
			float left
			color MainColorDark

			&.dire
				text-align right
	& .clearDraft 
		height 30px
		margin-top 14px
		line-height: 30px
		padding 0px 20px
		background lighten(MainColorDark, 90%)
		color MainColorDark
		cursor pointer
		float right

		&:hover
			background lighten(MainColorDark, 80%)