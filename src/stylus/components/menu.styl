.menu
	display block
	width 100%
	height 40px
	line-height 40px
	-webkit-user-select: none;
	-webkit-app-region: drag;
	background-color MainColor

	& > div
		float left
		height 40px
		line-height 40px
		-webkit-app-region: no-drag;
		color lighten(MainColor, 90%)
		padding 0 20px
		font-size 13px
		font-family Font
		cursor pointer
		border-left 1px solid lighten(MainColor, 10%)

		&:hover
		&.active
			background-color MainColorDark
			border-color lighten(MainColorDark, 10%)

		&:first-child
			background-color MainColorDark
			position relative
			padding-left 46px
			border-left 0px

			&:before
				content ''
				height 100%
				display block
				position absolute
				height 100%
				left 20px
				width 16px
				-webkit-mask-size 16px
				-webkit-mask-image url(images/logo_small.svg)
				-webkit-mask-repeat no-repeat
				-webkit-mask-position center
				background-color lighten(MainColor, 90%)

		&:nth-last-child(-n+2)
			border 0

		&:nth-last-child(-n+2)
			border-radius 50%
			padding 0
			width 10px
			height 10px
			margin-top 15px
			float right

		&:nth-last-child(-n+2):hover
			background-color lighten(MainColor, 60%)

		&:nth-last-child(1)
			background-color lighten(MainColor, 30%)
			margin-right 5px

		&:nth-last-child(2)
			background-color lighten(MainColor, 40%)
			margin-right 15px
