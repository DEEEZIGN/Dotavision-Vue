.prematchAnalisysStats
    width calc(100% - 40px)
    float left

    & .table
        width 100%
        height 40px
        line-height 40px
        color lighten(MainColorDark, 10%)
        display table
        border-bottom 1px solid lighten(MainColorDark, 90%)

        &.header
            background-color lighten(MainColorDark, 90%)

        & > div
            padding 0 20px
            display table-cell
            border-right 1px solid lighten(MainColorDark, 90%)

            &:last-child
                border-right 0px

            &.left
                text-align left

            &.right
                text-align right

            &.center
                text-align center
            
            &.no-border
                border 0px
            
            & img
                vertical-align middle
            
            &:nth-child(1)
                width 170px
                max-width 170px
                white-space nowrap
                overflow hidden

                & img
                    border-radius 2px
                    height 20px
                    margin-right 10px
                    background-color lighten(MainColorDark, 90%)

            &:nth-child(2)
                width 170px
                max-width 170px
                white-space nowrap
                overflow hidden

            &:nth-child(3)
                
                & img
                    height 19px
                    opacity 0.8
                    margin-right 1px
                    background-color lighten(MainColorDark, 90%)

            &:nth-child(4)
                width 150px
                max-width 150px
                white-space nowrap

                & > div
                    display inline-block
                    vertical-align middle
                    height 27px
                    line-height 26px
                    text-align center
                    width 100%
                    cursor pointer
                    background-color lighten(MainColorDark, 90%)
                    color MainColorDark

                    &:hover
                        background-color lighten(MainColorDark, 80%)
        
        &:last-child
            border-bottom 0

.prematchAnalisysOpenTotals
    float right
    width 40px
    height 100%
    display table
    overflow hidden
    cursor pointer
    position relative
    z-index 18
    color lighten(MainColorDark, 100%)
    background-color MainColorDark

    &:hover
        background-color lighten(MainColorDark, 10%)

    & > div
        transform rotate(-90deg)
        display table-cell
        vertical-align middle
        white-space nowrap
        max-width 40px

        &.active:before
            transform rotate(270deg)

        &:before
            width 40px
            height 40px
            content ''
            transform rotate(90deg)
            margin-left -100%
            top calc(50% - 20px)
            position fixed
            background-color lighten(MainColorDark, 100%)
            -webkit-mask-repeat no-repeat
            -webkit-mask-position center
            -webkit-mask-size 8px
            -webkit-mask-image url(images/arrow.svg)

.prematchAnalisysTotals
    width calc(100% - 210px)
    float right
    right -100%
    position fixed
    background-color lighten(MainColorDark, 100%)
    z-index 9

    &.active
        right 40px

    & .table
        width 100%
        height 40px
        line-height 40px
        color lighten(MainColorDark, 10%)
        display table
        border-bottom 1px solid lighten(MainColorDark, 90%)

        &:last-child
            border-bottom 0

        &.header
            background-color lighten(MainColorDark, 90%)

        & > div
            padding 0px
            min-width 16.66%
            max-width 16.66%
            width 16.66%
            display table-cell
            border-right 1px solid lighten(MainColorDark, 90%)

            &:last-child
                border-right 0px

            &.left
                text-align left

            &.right
                text-align right

            &.center
                text-align center
            
            &.no-border
                border 0px
                color lighten(MainColorDark, 100%)
            
            &.max
                text-decoration underline
                font-weight bold